<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/mRegisterBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textSize="20sp"
            android:textColor="#f8b642"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/mRegisterLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textSize="20sp"
            android:textColor="#f8b642"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#b1b0b0"></View>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欢迎您加入宠物寄养"
        android:textSize="22sp"
        android:layout_gravity="center_horizontal"
        android:textColor="#605e5e"
        android:layout_marginTop="10dp"
        />
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/login_edit_shape"
            android:hint="请输入手机号"
            android:textColorHint="#bcb9b9" />
        <TextView
            android:id="@+id/mGetCheckCode"
            android:background="@drawable/check_code_shape"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="获取验证码"
            android:textSize="17sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:textColor="#f8b642"/>
    </RelativeLayout>
    <EditText
        android:textColorHint="#bcb9b9"
        android:hint="请输入验证码"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/login_edit_shape"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <EditText
        android:textColorHint="#bcb9b9"
        android:hint="请输入用户名"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/login_edit_shape"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <EditText
        android:textColorHint="#bcb9b9"
        android:hint="请输入6位数字密码"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/login_edit_shape"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注   册"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/login_btn_shape"
        android:id="@+id/mBtnRegister"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <View
            android:layout_width="0dp"
            android:layout_height="0.1dp"
            android:layout_weight="1"
            android:background="#b1b0b0"
            android:layout_gravity="center_vertical"></View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用第三方账号注册"
            android:textColor="#b1b0b0"
            android:layout_gravity="center_vertical"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0.1dp"
            android:layout_weight="1"
            android:background="#b1b0b0"
            android:layout_gravity="center_vertical"></View>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:id="@+id/mWxRegister"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:drawableTop="@mipmap/login_weixin"/>
        <TextView
            android:id="@+id/mQQRegister"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机QQ"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:drawableTop="@mipmap/login_qq"/>
    </LinearLayout>
</LinearLayout>