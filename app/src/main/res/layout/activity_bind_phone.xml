<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mBindPhoneBack"
            android:src="@mipmap/back_gray"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定手机"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textColor="#666565"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#6c6a6a"></View>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher_round"
        android:id="@+id/mBindPhoneHeadImg"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="无网名"
        android:textSize="17sp"
        android:id="@+id/mBindPhoneName"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"/>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <EditText
            android:id="@+id/mBindPhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/login_edit_shape"
            android:hint="请填写手机号码"
            android:textColorHint="#bcb9b9" />
        <TextView
            android:id="@+id/mGetCheckCode"
            android:background="@drawable/bind_phone_check_code_shape"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="获取验证码"
            android:textSize="17sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:textColor="#434342"/>
    </RelativeLayout>
    <EditText
        android:id="@+id/mInputCheckCode"
        android:textColorHint="#bcb9b9"
        android:hint="请输入验证码"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/login_edit_shape"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <EditText
        android:id="@+id/mInputUserName"
        android:textColorHint="#bcb9b9"
        android:hint="请输入用户名"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/login_edit_shape"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <EditText
        android:id="@+id/mInputPassword"
        android:textColorHint="#bcb9b9"
        android:hint="请输入6位数字密码"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/login_edit_shape"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <Button
        android:id="@+id/mBindPhoneBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定"
        android:background="@drawable/login_btn_shape"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:textSize="18sp"
        android:textColor="#313131"
        android:layout_marginRight="15dp"/>
</LinearLayout>